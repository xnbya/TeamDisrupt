<h1>Hey, <%= current_user.name %>!</h1>

<%= link_to "Add Reference", references_create_path %>
<% @references.each do |reference| %>
  <h2><%= reference.title %><%= "Untitled Reference" unless reference.title.length > 0 %></h2>
  <p><%= reference.note %><br />
    <%= reference.link %></p>
<% end %>
