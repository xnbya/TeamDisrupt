<h1>References</h1>
<% @references.each do |r| %>
  <h3><%= r.title %><%= "Untitled Reference" unless r.title.length > 0 %></h3>
  <p>Created on <%= r.created_at.strftime("%a %d %B") %></p>
  <p><%= link_to "View", reference_path(r) %></p>
<% end %>

<nav>
  <ul class="pagination pagination-lg">
    <li class="page-item <%= 'disabled' if @this_page == 1 %>">
      <a class="page-link" href="<%= references_path %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    <% (1..@pages).each do |x| %>
      <li class="page-item <%= 'active' if @this_page == x %>">
        <a class="page-link" href="<%= references_path %>?start=<%= (x-1) * 5 %>"><%= x %></a>
      </li>
    <% end %>

    <li class="page-item <%= 'disabled' if @this_page == @pages %>">
      <a class="page-link" href="<%= references_path %>?start=<%= @this_page * 5 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
  </ul>
</nav>
