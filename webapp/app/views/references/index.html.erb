<div class="jumbotron">
  <h1>All References</h1>
</div>

<%= render partial: "shared/reference", locals: { references: @references } %>

<nav>
  <ul class="pagination pagination-lg">
    <li class="page-item <%= 'disabled' if @this_page == 1 %>">
      <a class="page-link" href="<%= references_path %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    <% (1..@pages).each do |x| %>
      <li class="page-item <%= 'active' if @this_page == x %>">
        <a class="page-link" href="<%= references_path %>?start=<%= (x-1) * 5 %>"><%= x %></a>
      </li>
    <% end %>

    <li class="page-item <%= 'disabled' if @this_page == @pages %>">
      <a class="page-link" href="<%= references_path %>?start=<%= @this_page * 5 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
  </ul>
</nav>
